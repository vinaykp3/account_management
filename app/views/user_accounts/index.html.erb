<h1>Listing user_accounts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Transaction date</th>
      <th>Transaction place</th>
      <th>Transaction amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_accounts.each do |user_account| %>
      <tr>
        <td><%= user_account.name %></td>
        <td><%= user_account.transaction_date %></td>
        <td><%= user_account.transaction_place %></td>
        <td><%= user_account.transaction_amount %></td>
        <td><%= link_to 'Show', user_account %></td>
        <td><%= link_to 'Edit', edit_user_account_path(user_account) %></td>
        <td><%= link_to 'Destroy', user_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

